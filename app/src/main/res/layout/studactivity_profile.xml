<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLayout"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/circular_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="40dp"
                    android:layout_alignParentLeft="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_height="60dp"
                        android:layout_width="match_parent"
                        android:src="@drawable/person"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circular_profile"
                    android:text="Display Name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circular_profile"
                    android:layout_below="@id/display_name"
                    android:text="Student ID"
                    android:layout_marginLeft="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/personal_info"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/info">
                </ImageView>
                <Button
                    android:id="@+id/personal_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/personal_info"
                    android:text="Personal Information"
                    android:paddingRight="120dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"/>
            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:background="@color/grey"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/booking_settings"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/booking_settings">
                </ImageView>
                <Button
                    android:id="@+id/booking_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/booking_settings"
                    android:text="Booking Settings"
                    android:paddingRight="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"/>
            </RelativeLayout>
            <View
                android:id="@+id/line2"
                android:background="@color/grey"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/change_password"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/change_password">
                </ImageView>
                <Button
                    android:id="@+id/change_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/change_password"
                    android:text="Change Password"
                    android:paddingRight="140dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"/>
            </RelativeLayout>
            <View
                android:id="@+id/line3"
                android:background="@color/grey"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/friends"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/friends">
                </ImageView>
                <Button
                    android:id="@+id/friends_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/friends"
                    android:text="Friends"
                    android:paddingRight="200dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"/>
            </RelativeLayout>
            <View
                android:id="@+id/line4"
                android:background="@color/grey"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        </ScrollView>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            app:menu="@menu/studnav_bar" />
    </android.support.v4.widget.DrawerLayout>



    <FrameLayout
        android:id="@+id/fragmentholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="#FFFFFF"
            android:visibility="visible"
            app:menu="@menu/studbottom_navigation_menu" />



    </FrameLayout>

</RelativeLayout>
